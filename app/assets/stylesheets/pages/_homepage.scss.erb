.knowledge {
  -webkit-clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
  clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
  height: 700px;
  background: #2e323b;
  position: relative;
  z-index: 12;
  .fade-bg {
    /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffffff+0,ffffff+0,ffffff+100&1+0,0+100 */
    background: -moz-linear-gradient(top,  rgba(255,255,255,1) 0%, rgba(255,255,255,0) 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(top,  rgba(255,255,255,1) 0%,rgba(255,255,255,0) 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(to bottom,  rgba(255,255,255,1) 0%,rgba(255,255,255,0) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#00ffffff',GradientType=0 ); /* IE6-9 */
    z-index: 9;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
  .animate-bg {
    background: #2e323b;
    z-index: 10;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
  }
  .image {
    position: absolute;
    top: 6px; /* equal to border thickness */
    left: 0; /* equal to border thickness */
    width: 100%; /* container height - (border thickness * 2) */
    height: 688px; /* container height - (border thickness * 2) */
    background-image: url(<%= asset_path 'shutterstock_114524698.jpg' %>);
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    -webkit-clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
    clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
  }
  .bg {
    background-image: url(<%= asset_path 'banner_bg.png' %>);
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding-bottom: 10em;
    .container {
      text-align: right;
    }
    h2, small {
      color: #f2f3ee;
    }
    h2 {
      font-size: 40px;
      letter-spacing: 3px;
    }
  }
}

.section-title {
  position: relative;
  margin-bottom: 50px;
  h2 {
    text-align: center;
    color: #2a3139;
  }
  .border {
    position: absolute;
    line-height: 31px;
    border-bottom: 1px solid #2a3139;
    bottom: 20%;
    width: 0%;
    &.right-border {
      right: 0;
    }
    &.left-border {
      left: 0;
    }
  }
}

#about {
  overflow: hidden;
  background-image: url(<%= asset_path('about_section_bg.png') %>);
  background-repeat: no-repeat;
  background-position: 103% 0;
  p {
    text-align: justify;
  }
}

#area-of-expertise {
  .progress {
    background-color: #e75b06;
    height: 25px;
    border-radius: 12px;
    -webkit-box-shadow: none;
    box-shadow: none;
  }
  .progress-bar {
    text-align: left;
    padding: 0 1em;
    background-color: #2e323b;
    line-height: 25px;
    position: relative;
    border-radius: 12px;
    
    > div {
      z-index: 10;
    }
  }
  .left {
    float: left;
  }
  .right {
    float: right;
  }
}

.design-image {
  text-align: center;
  position: relative;
  .design_bg {
    position: absolute;
    top: 0;
    bottom: 0;
    &.left {
      left: 0;
      right: 50%;
      background: url(<%= asset_path('design_left.jpg') %>) repeat-x 0 0;
    }
    &.right {
      right: 0;
      left: 50%;
      background: url(<%= asset_path('design_right.png') %>) repeat-x 0 0;
    }
  }

  img {
    width: 100%;
    height: auto;
    position: relative;
  }
  @media (min-width: $screen-lg-min) {
    img {
      width: auto;
      height: 100%;
    }
  }
}

.hire-title {
  padding-top: 50px;
  &:first-child {
    padding-top: 0;
  }
}
.contact-me-if {
  padding-top: 50px;
}