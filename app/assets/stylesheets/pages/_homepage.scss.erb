.knowledge {
  -webkit-clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
  clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
  height: 700px;
  background: #2e323b;
  position: relative;
  .image {
    position: absolute;
    top: 6px; /* equal to border thickness */
    left: 0; /* equal to border thickness */
    width: 100%; /* container height - (border thickness * 2) */
    height: 688px; /* container height - (border thickness * 2) */
    background-image: url(<%= asset_path 'shutterstock_114524698.jpg' %>);
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    -webkit-clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
    clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
  }
  .bg {
    background-image: url(<%= asset_path 'banner_bg.png' %>);
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding-bottom: 10em;
    .container {
      text-align: right;
    }
    h2, small {
      color: #f2f3ee;
    }
    h2 {
      font-size: 40px;
      letter-spacing: 3px;
    }
  }
}

.section-title {
  position: relative;
  h2 {
    text-align: center;
    color: #2a3139;
  }
  .border {
    position: absolute;
    line-height: 31px;
    border-bottom: 1px solid #2a3139;
    bottom: 20%;
    width: 0%;
    &.right-border {
      right: 0;
    }
    &.left-border {
      left: 0;
    }
  }
}

#about {
  overflow: hidden;
  background-image: url(<%= asset_path('about_section_bg.png') %>);
  background-repeat: no-repeat;
  background-position: 103% 0;
  p {
    text-align: justify;
  }
}

#area-of-expertise {
  .progress {
    background-color: #e75b06;
    height: 25px;
    border-radius: 12px;
  }
  .progress-bar {
    text-align: left;
    padding: 0 0.5em 0 2em;
    background-color: #2e323b;
    line-height: 25px;
    position: relative;
    &:after {
      content: '';
      position: absolute;
      right: 0;
      margin-right: 12px;
      width: 19px;
      padding-top: 46px;
      transform: rotate(45deg);
      box-shadow: 5px -5px 0 3px #2e323b;
      z-index: 1;
      background: #2e323b;
      top: 0;
    }
    > div {
      z-index: 2;
      position: relative;
    }
  }
  .left {
    float: left;
  }
  .right {
    float: right;
  }
}

.design-image {
  text-align: center;
  position: relative;
  .design_bg {
    position: absolute;
    top: 0;
    bottom: 0;
    &.left {
      left: 0;
      right: 50%;
      background: url(<%= asset_path('design_left.jpg') %>) repeat-x 0 0;
    }
    &.right {
      right: 0;
      left: 50%;
      background: url(<%= asset_path('design_right.png') %>) repeat-x 0 0;
    }
  }

  img {
    width: 100%;
    height: auto;
    position: relative;
  }
  @media (min-width: $screen-lg-min) {
    img {
      width: auto;
      height: 100%;
    }
  }
}
