.knowledge {
  -webkit-clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
  clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
  height: 700px;
  background: #2e323b;
  position: relative;
  .image {
    position: absolute;
    top: 6px; /* equal to border thickness */
    left: 0; /* equal to border thickness */
    width: 100%; /* container height - (border thickness * 2) */
    height: 688px; /* container height - (border thickness * 2) */
    background-image: url(<%= asset_path 'shutterstock_114524698.jpg' %>);
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    -webkit-clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
    clip-path: polygon(0 0, 100% 0, 100% 84%, 0% 100%);
  }
  .bg {
    background-image: url(<%= asset_path 'banner_bg.png' %>);
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding-bottom: 10em;
    .container {
      text-align: right;
    }
    h2, small {
      color: #f2f3ee;
    }
  }
}

.section {
  height: 1000px;
}
.section-title {
  position: relative;
  h2 {
    text-align: center;
    color: #2a3139;
  }
  .border {
    position: absolute;
    line-height: 31px;
    border-bottom: 1px solid #2a3139;
    bottom: 20%;
    width: 0%;
  }
}

#about p {
  text-align: justify;
}

#area-of-expertise {
  .progress-bar {
    text-align: left;
    padding: 0 1em;
  }
  .left {
    float: left;
  }
  .right {
    float: right;
  }
}
