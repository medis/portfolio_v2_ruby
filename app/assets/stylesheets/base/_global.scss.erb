@font-face {
  font-family: 'NotoSans-Regular';
  src: font-url('NotoSans-Regular.ttf') format('truetype');
}
@font-face {
  font-family: 'NotoSans-Bold';
  src: font-url('NotoSans-Bold.ttf') format('truetype');
}

body {
  background-image: url(<%= asset_path('bg.jpg') %>);
  padding-top: 271px;
  font-family: 'NotoSans-Regular', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

/**
* Remove gutter padding.
*/
.no-gutter > [class*='col-'] {
  padding-right:0;
  padding-left:0;
}

.vertical-center {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
}

h2 {
  font-size: 35px;
}
