#portfolio {
  .poligon {
    display: inline-block;
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    background: transparent;
    transition: background 0.2s ease;
    box-sizing: border-box;
    -webkit-clip-path: url(#clipper);
    -moz-clip-path: url(#clipper);
    clip-path: url(#clipper);
  }
  img.portfolio-image {
    position: absolute;
    top: 2%;
    left: 2%;
    width: 96%;
    height: 96%;
    -webkit-clip-path: url(#clipper);
    -moz-clip-path: url(#clipper);
    clip-path: url(#clipper);
    z-index: 4;
  }
  .hover_bg {
    display: none;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-image: url(<%= asset_path 'banner_bg.png' %>);
    z-index: 5;
  }
  a {
    display: block;
    &:focus, &:hover {
      outline: none;
      .poligon {
        background: #2e323b;
      }
      .hover_bg {
        display: block;
      }
    }
  }
  .title {
    color: #FFF;
    text-align: center;
    font-size: 27px;
    font-weight: bold;
    border-bottom: 3px solid #FFF;
    width: 60%;
    margin: 0 auto 10px auto;
    padding-bottom: 10px;
    line-height: 1.2;
    text-transform: uppercase;
  }
  .magnifying-glass {
    text-align: center;
    span {
      border: 3px solid #FFF;
      border-radius: 50%;
      padding: 12px;
      display: inline-block;
    }
  }
  .spec {
    color: #FFF;
    text-align: center;
    font-size: 19px;
    text-transform: uppercase;
    padding-bottom: 10px;
  }
}
