@import "susy";
.navbar {
	padding: 10px 0;
	background: #2e323b;
	@include breakpoint($small) {
		background: transparent;
	}

	.nav {
		@include breakpoint(0 $small) {
			height: auto !important;
			a .title { color: #FFF !important; }
		}
	}
}
#logo {
	padding-top: 10px;
	position: relative;
	display: none;
	@include breakpoint($small) {
		display: block;
	}
	img {
		width: 100%;
		height: auto;
		max-width: 80px;
		&.white {
			position: absolute;
			top: 10px;
			left: 15px;
			opacity: 0;
		}
	}
}
nav {
  .title {
		text-align: center;
		margin: 0;
		color: #2b323c;
    font-family: 'NotoSans-Bold';
		font-size: 0.8em;
		@include breakpoint($medium) {
			font-size: 1em;
			border-bottom: 1px solid #21211f;
			padding-bottom: 5px;
		}
		@include breakpoint($large) {
			font-size: 1.3em;
		}
		.animate {
			display: none;
			@include breakpoint($medium) {
				display: inline-block;
				opacity: 0;
				-webkit-transition: opacity 0.3s ease-in-out;
				-moz-transition: opacity 0.3s ease-in-out;
				transition: opacity 0.3s ease-in-out;
				&.left {
					padding-right: 4px;
					transform: translate(-10px, 0);
					display: inline-block;
				}
				&.right {
					padding-left: 4px;
					transform: translate(10px, 0);
					display: inline-block;
				}
				&.left, &.right {
					-webkit-transition: all 0.2s ease-in-out;
					-moz-transition: all 0.2s ease-in-out;
					transition: all 0.2s ease-in-out;
				}
			}
		}
	}
	div.description {
		margin: 0;
	  font-size: 1.2em;
		line-height: 1.2;
		padding-top: 10px;
		text-align: center;
		color: #2b323c;
		display: none;
		@include breakpoint($medium) {
			display: block;
		}
	}
	ul {
		@include container;
		margin: 0;
		padding: 0;
		list-style: none;
    width: 100%;
		overflow: hidden;
		@include breakpoint($medium) {
			height: 271px;
		}
		li {
			width: 20%;
			display: block;
			float: left;
			@include breakpoint($medium) {
				height: 217px;
				width: 16.66%;
			}
			a {
				display: block;
				padding: 2em;
				text-decoration: none;
				transition: background-color 0.3s ease;
				background-color: transparent;
				overflow: hidden;
			}
      img {
        width: 100%;
        height: auto;
				max-width: 80px;
      }
		}
	}
}

nav li.link a {
	&:hover, &:focus {
		@include active_menu;
	}
}
nav li.link.active a {
	@include active_menu;
}
nav li.logo a {
  &:hover, &:focus, &.active {
    background: transparent;
  }
}

nav li .icon {
	padding-bottom: 15px;
  text-align: center;
	display: none;
	@include breakpoint($small) {
		display: block;
	}
	&.hover {
		display: none;
	}
	&.white {
		position: absolute;
    top: 10px;
    left: 0;
    right: 0;
    opacity: 0;
	}
}

#header {
	nav.shrink {
    background-color: #2e323b;
		.title, .description {
			display: none;
		}
		.icon {
			padding-bottom: 0;
			display: none;
      height: 100%;
      transition: all 0.4s ease;
			&.white {
				display: block;
			}
		}
		ul {
			height: 100px;
			margin: 0 auto;
      transition: height .3s ease, width .3s ease;
      width: 60%;
		}
		ul li {
      padding: .8em;
      img {
        width: 100%;
        height: auto;
        position: relative;
        top: 50%;
        transform: translateY(-50%);
      }
			&.logo img {
				display: none;
				&.white {
					display: block;
				}
			}
			a {
				padding: 1em;
				&:hover, &:focus {
					.icon {
						display: none;
						&.hover {
							display: block;
						}
					}
				}
			}
			&.active .icon {
				display: none;
				&.hover {
					display: block;
				}
			}
		}
	}
}
.menu-bg {
	display: none;
	@include breakpoint($small) {
		position: fixed;
		width: 100%;
		background: #2e323b;
		z-index: 11;
		height: 152px;
		display: block;
	}
}
.nav > li > a {
	padding: 10px 0;
	@include breakpoint($medium) {
		padding: 10px 15px;
	}
}