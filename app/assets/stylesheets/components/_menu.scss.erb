@import "susy";

nav {
  -webkit-transition: all 0.4s ease;
  transition: all 0.4s ease;
	ul {
		@include container;
		margin: 0;
		padding: 0;
		list-style: none;
		li {
			width: 16.66%;
			display: block;
			float: left;
			a {
				display: block;
				padding: 2em;
				text-decoration: none;
				transition: background-color 0.3s ease;
				background-color: transparent;
				overflow: hidden;
			}
			&.logo {
				a {
					padding: 2em 1em 0 0;
					display: block;
				}
				img {
					width: 100%;
					height: auto;
					&.white {
						display: none;
					}
				}
			}
		}
	}
}

nav li.link a {
	&:hover, &:focus, &.active {
		background-color: #2e323b;

		h2, div.description {
			color: #FFF;
			border-color: #FFF;
			-webkit-animation: slideInUp .5s;
	    animation: slideInUp .5s;
		}

		.icon {
			display: none;
			&.hover {
				display: block;
			}
		}
	}
}

nav li .icon {
	padding-bottom: 15px;
	&.hover,
	&.white {
		display: none;
	}
	img {
		width: 100%;
		height: auto;
	}
}

nav {
	h2 {
		font-size: 1.35em;
		text-align: center;
		margin: 0;
		border-bottom: 1px solid #21211f;
		padding-bottom: 5px;
		color: #2b323c;
	}
	div.description {
		margin: 0;
		font-size: .9em;
		line-height: 1.2;
		padding-top: 10px;
		text-align: center;
		color: #2b323c;
	}
}

#header {
	background: #2e323b;
	nav.shrink {
		h2, div.description {
			display: none;
		}
		.icon {
			padding-bottom: 0;
			display: none;
			&.white {
				display: block;
			}
		}
		ul {
			max-width: 50%;
			margin: 0 auto;
		}
		ul li {
			&.logo img {
				display: none;
				&.white {
					display: block;
				}
			}
			a {
				padding: 1em;
				&:hover, &:focus {
					.icon {
						display: none;
						&.hover {
							display: block;
						}
					}
				}
			}
			&.active .icon {
				display: none;
				&.hover {
					display: block;
				}
			}
		}
	}
}
