@import "susy";

nav {
  .title {
		font-size: 1.35em;
		text-align: center;
		margin: 0;
		border-bottom: 1px solid #21211f;
		padding-bottom: 5px;
		color: #2b323c;
    font-family: 'NotoSans-Bold';
	}
	div.description {
		margin: 0;
	  font-size: 1.2em;
		line-height: 1.2;
		padding-top: 10px;
		text-align: center;
		color: #2b323c;
	}
	ul {
		@include container;
		margin: 0;
		padding: 0;
		list-style: none;
    height: 271px;
    width: 100%;
		li {
			width: 16.66%;
      height: 100%;
			display: block;
			float: left;
			a {
				display: block;
        height: 100%;
				padding: 2em;
				text-decoration: none;
				transition: background-color 0.3s ease;
				background-color: transparent;
				overflow: hidden;
			}
      img {
        width: 90%;
        height: auto;
      }
			&.logo {
				a {
					padding: 2em 1em 0 0;
					display: block;
				}
				img.white {
					display: none;
				}
			}
		}
	}
}

nav li.link a {
	&:hover, &:focus, &.active {
		background-color: #2e323b;

		.title, .description {
			color: #FFF;
			border-color: #FFF;
			-webkit-animation: slideInUp .5s;
	    animation: slideInUp .5s;
		}

		.icon {
			display: none;
			&.hover {
				display: block;
			}
		}
	}
}

nav li .icon {
	padding-bottom: 15px;
  text-align: center;
	&.hover,
	&.white {
		display: none;
	}
}

#header {
	nav.shrink {
    background-color: #2e323b;
		.title, .description {
			display: none;
		}
		.icon {
			padding-bottom: 0;
			display: none;
      height: 100%;
      transition: all 0.4s ease;
			&.white {
				display: block;
			}
		}
		ul {
			height: 100px;
			margin: 0 auto;
      transition: height .3s ease, width .3s ease;
      width: 60%;
		}
		ul li {
      img {
        width: auto;
        height: 100%;
      }
			&.logo img {
				display: none;
				&.white {
					display: block;
				}
			}
			a {
				padding: 1em;
				&:hover, &:focus {
					.icon {
						display: none;
						&.hover {
							display: block;
						}
					}
				}
			}
			&.active .icon {
				display: none;
				&.hover {
					display: block;
				}
			}
		}
	}
}
