<div id="area-of-expertise">
  <div id="trigger-area-of-expertise"></div>
  <div class="container">
    <div class="section-title">
      <div class="border left-border"></div>
      <h2>AREAS OF EXPERTISE</h2>
      <div class="border right-border"></div>
    </div>
    <% skills.each do |group, tech| %>
      <div class="<%= group %> col-md-4">
        <h3><%= group %></h3>
        <% tech.each do |tech_title, skill| %>
          <h4 class="title"><%= tech_title %></h4>
          
          <ul>
            <% skill.each do |object| %>
              <li class="skill-title hidden-skill" style="transition-delay: <%= rand(0.0..1.0).round(1) %>s"><%= object.title %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    <% end %>

  </div>
  <div id="trigger-skills"></div>
</div>
